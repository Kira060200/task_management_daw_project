
@{
    ViewBag.Title = "New";
}

<h2>Adaugare articol @ViewBag.IdEchip</h2>
<form method="post" action="/Tasks/New">
    <label>Titlu task</label>
    <input type="text" name="Title" />
    <br />
    <label>Status task</label>
    <textarea name="Status"></textarea>
    <label>Continut task</label>
    <textarea name="Content"></textarea>

    <br />
    <input type="hidden" name="StartDate" value="@DateTime.Now" />
    <br />
    <br />
    <input type="date" name="EndDate" />
    <br />
    <input type="hidden" name="TeamId" value="@ViewBag.IdEchip" />

    <br />
    <button type="submit">Adauga articol</button>
</form>
        [Key]
        public int TaskId { get; set; }
        [Required]
        public string Title { get; set; }
        [Required]
        public string Status { get; set; }
        public string Content { get; set; }
        public DateTime StartDate { get; set; }
        public DateTime EndDate { get; set; }
        public int TeamId { get; set; }
