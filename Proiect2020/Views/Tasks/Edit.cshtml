@{
    ViewBag.Title = "Edit";
}
<form method="post" action="/Tasks/Edit/@ViewBag.Task.TaskId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    <br />
    <label>Titlu task</label>
    <br />
    <input type="text" name="Title" value="@ViewBag.Task.Title" />
    <br /><br />
    <label>Status task</label>
    <br />
    <input type="text" name="Status" value="@ViewBag.Task.Status" />
    <br /><br />
    <label>Continut task</label>
    <br />
    <input type="text" name="Content" value="@ViewBag.Task.Content" />
    <br /><br />
    <label>Data Start</label>
    <br />
    <input type="date" name="StartDate" value="@ViewBag.Task.StartDate" />
    <br />
    <label>Data Final</label>
    <br />
    <input type="date" name="EndDate" value="@ViewBag.Task.EndDate" />
    <br />
    <input type="hidden" name="TeamId" value="@ViewBag.Task.TeamId" />

    <br />
    <button type="submit">Modifica task</button>
</form>


