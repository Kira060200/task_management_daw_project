@model Laborator8App.Models.TaskClass
@{
    ViewBag.Title = "Edit";
}
<div style=" color:black; background: rgb(69,53,53); background: linear-gradient(254deg, rgba(69,53,53,1) 64%, rgba(115,54,54,1) 95%) !important">
    <center>
        <form method="post" action="/Tasks/Edit/@ViewBag.Task.TaskId">
            @Html.HttpMethodOverride(HttpVerbs.Put)
            <br />
            <label>Titlu task</label>
            <br />
            <input type="text" name="Title" value="@ViewBag.Task.Title" />
            <br /><br />
            <label>Selecteaza statusul</label>
            <br />
            @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.Status, "Value", "Text"), "Selecteaza statusul")
            <br /><br />
            <label>Continut Task</label>
            <br />
            <input type="text" name="Content" value="@ViewBag.Task.Content" />
            <br /><br />
            <label>Numele membrului asignat</label>
            <br />
            <input type="text" name="WorkerName" value="@ViewBag.Task.WorkerName" />
            <br /><br />
            <label>StartData</label>
            <br />
            <input type="date" name="StartDate" value="@ViewBag.Task.StartDate" />
            <br />
            <label>EndDate</label>
            <br />
            <input type="date" name="EndDate" value="@ViewBag.Task.EndDate" />
            <br />
            <input type="hidden" name="ProjectId" value="@ViewBag.Task.ProjectId" />

            <br />
            <button type="submit">Modifica task</button>
        </form>
    </center>
</div>