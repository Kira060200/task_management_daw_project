@model Laborator8App.Models.TaskClass
@{
    ViewBag.Title = "New";
}

<h1>Adaugare task</h1>
<center>
    <div style=" color:black; background: rgb(69,53,53); background: linear-gradient(254deg, rgba(69,53,53,1) 64%, rgba(115,54,54,1) 95%) !important">

        <form method="post" action="/Tasks/New">

            @Html.Label("Title", "")
            <br />
            @Html.TextArea("Title", "Titlu Task", new { @class = "form-control" })
            @Html.ValidationMessage("Title", "", new { @class = "text-danger" })
            <br /><br />
            <!--
            <input type="text" name="Title" value="Titlu Task" />
            <br />-->


            @Html.DropDownListFor(m => m.Status, new SelectList(ViewBag.Status, "Value", "Text"), "Selecteaza statusul")
            @Html.ValidationMessage("Status", "", new { @class = "text-danger" })
            <br />


            @Html.Label("Content", "")
            <br />
            @Html.TextArea("Content", "Continut", new { @class = "form-control" })
            @Html.ValidationMessage("Content", "", new { @class = "text-danger" })
            <br /><br />

            <!--<textarea name="Content">Continut</textarea>
            <br />-->

            @Html.Label("WorkerName", "")
            <br />
            @Html.TextArea("WorkerName", "Membrul", new { @class = "form-control" })
            @Html.ValidationMessage("WorkerName", "", new { @class = "text-danger" })
            <br /><br />

            <!-- <textarea name="WorkerName">Membru Id</textarea>        <br / -->

            <input type="hidden" name="StartDate" value="@DateTime.Now" />
            <input type="date" name="EndDate" />
            <input type="hidden" name="ProjectId" value="@ViewBag.IdEchip" />

            <br />
            <button class="btn btn-info" type="submit">Adauga task</button>
        </form>
    </div>
</center>
