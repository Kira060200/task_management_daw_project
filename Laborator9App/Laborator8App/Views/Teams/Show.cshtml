@{
    /**/

    ViewBag.Title = "Afisare Echipa";
}
<h2>@ViewBag.Message</h2>
<h2>@ViewBag.Title</h2>

<p>@ViewBag.Team.TeamName</p>
@foreach (var proj in ViewBag.Projects)
{
    <p>@proj.ProjectName</p><br />
    if (User.IsInRole("Admin") || ViewBag.UserIdCur == ViewBag.Team.UserId)
    {
        <a class="btn btn-success pull-left" href="/Projects/Edit/@proj.ProjectId">Modifica proiect</a>}

    <a class="btn btn-success pull-left" href="/Projects/Show/@proj.ProjectId">Afiseaza proiect</a>
    if (User.IsInRole("Admin") || ViewBag.UserIdCur == ViewBag.Team.UserId)
    {
        <form method="post" action="/Projects/Delete/@proj.ProjectId">
            @Html.HttpMethodOverride(HttpVerbs.Delete)
            <button class="btn btn-danger pull-right" type="submit">Sterge proiect</button>
        </form>
    }
    <br />
    <br />

}
@if (User.IsInRole("Admin") || ViewBag.UserIdCur == ViewBag.Team.UserId)
{
    <a class="btn btn-info" href="/Projects/New/@ViewBag.Team.TeamId">Adauga proiect</a>
}

<br />
@if (User.IsInRole("Admin") || ViewBag.UserIdCur == ViewBag.Team.UserId)
{
    <a class="btn btn-success" href="/Teams/Edit/@ViewBag.Team.TeamId">Editare echipa</a>
    <form method="post" action="/Teams/Delete/@ViewBag.Team.TeamId">
        @Html.HttpMethodOverride(HttpVerbs.Delete)
        <button class="btn btn-danger pull-right" type="submit">Sterge echipa</button>
    </form>
}
<br />
<hr />
<br />
@if (User.IsInRole("Admin") || ViewBag.UserIdCur == ViewBag.Team.UserId)
{ 
    <form method="post" action="/Members/AddMember">
        <input type="text" name="UserName" />
        <input type="hidden" name="TeamId" value="@ViewBag.Team.TeamId" />
        <button type="submit">Adauga Membru</button>
    </form>

}
<br />
<hr />
<br />
<a class="btn btn-success" href="/Teams/Index/">Afisare lista echipe</a>

